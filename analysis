        // Chart 1: State Population Pie Chart
        const ctxPie = document.getElementById('populationChart').getContext('2d');
        const populationChart = new Chart(ctxPie, {
            type: 'pie',
            data: {
                labels: ['加利福尼亚州', '德克萨斯州', '佛罗里达州', '纽约州', '宾夕法尼亚州', '伊利诺伊州', '俄亥俄州', '佐治亚州', '北卡罗来纳州', '密歇根州', '其他州'],
                datasets: [{
                    label: '人口',
                    data: [39237836, 30029572, 22244823, 19677151, 12972008, 12671469, 11756058, 10912876, 10698973, 10034113, 150000000],
                    backgroundColor: [
                        '#e74c3c', '#3498db', '#f1c40f', '#2ecc71', '#9b59b6', 
                        '#e67e22', '#1abc9c', '#34495e', '#d35400', '#c0392b', '#7f8c8d'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    title: {
                        display: true,
                        text: '美国各州人口数据可视化',
                        font: { size: 16, family: "'Times New Roman', Times, serif" }
                    }
                }
            }
        });

        // Chart 2: Age Distribution Bar Chart
        const ctxBar = document.getElementById('ageDistributionChart').getContext('2d');
        const ageDistributionChart = new Chart(ctxBar, {
            type: 'bar',
            data: {
                labels: ['0-17岁', '18-24岁', '25-34岁', '35-44岁', '45-54岁', '55-64岁', '65岁以上'],
                datasets: [{
                    label: '人口占比 (%)',
                    data: [22.1, 9.8, 13.6, 12.5, 12.0, 12.4, 17.6], // Sample data based on recent estimates
                    backgroundColor: '#2ecc71',
                    borderColor: '#27ae60',
                    borderWidth: 1
                }]
            },
            options: {
                indexAxis: 'y', // Makes the bar chart horizontal for better readability
                responsive: true,
                plugins: {
                    legend: {
                        display: false
                    },
                    title: {
                        display: true,
                        text: '美国人口年龄分布结构',
                        font: { size: 16, family: "'Times New Roman', Times, serif" }
                    }
                },
                scales: {
                    x: {
                        ticks: {
                            callback: function(value) {
                                return value + '%'
                            }
                        }
                    }
                }
            }
        });
    </script>

